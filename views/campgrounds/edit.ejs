<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1><%= campground.name %></h1>
            <div class="form-block">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value= "<%= campground.name %>" name="campground[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value= "<%= campground.image %>" name="campground[image]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value= "<%= campground.description %>" name="campground[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Submit</button>
                    </div>
                </form>
                
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <div class="form group">
                        <button class="form-control btn btn-small btn-danger">Delete Campground</button>
                    </div>
                </form>
                <hr>
                <a class = "form-control btn btn-small btn-info" href="/campgrounds">Back to All Campgrounds</a>
            </div>
    </div>
</div>
<% include ../partials/footer %>
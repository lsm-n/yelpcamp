<% include ../partials/header %>

<div class="container">
    
    <div class="row">
        <!--SIDE BAR-->
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group">
                <li class="list-group-item">Category 1</li>
                <li class="list-group-item">Category 2</li>
                <li class="list-group-item">Category 3</li>
            </ul>
        </div>
        
        <!--MAIN CONTENT-->
        <div class="col-md-9">
            <div class="thumbnail">
                <img src= "<%= campground.image %>" class="img-responsive img-fluid">
                <div class="caption">
                    <h4 class="pull-right">$10.00/night</h4>
                    <h4><a><%= campground.name %></a></h4>
                    <a class="btn btn-success btn-sm pull-right" href="/campgrounds/<%= campground._id %>/comments/new">Leave a Review</a>
                    <em><h5>Submitted By: <%= campground.author.username %></h5></em>
                    <p> <%= campground.description %></p>
                    
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
                    <% } %>
                </div>
            </div>
            
            <div class="well">
                <% campground.comments.forEach(function(comment) { %>
                   <div class="row comment">
                       <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">2 days ago</span>
                        <p>
                          <%= comment.text %>
                        </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a class ="editcomment pull-right" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                         <% } %>
                       </div>
                   </div>
               <% }) %>
           </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1>Add New Comment to <%= campground.name %></h1>
            <div class="form-block">
                <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="comment" name="comment[text]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-medium btn-default btn-block">Submit</button>
                    </div>
                </form>
                
                <a class="form-control btn btn-small btn-info" href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
            </div>
    </div>
</div>
<% include ../partials/footer %>